{% extends 'base.html.twig' %}
{%block body %}

 <div class="card shadow-sm">
 <div class="form-group d-flex">
<a type="submit" href="{{path('app_pdf')}}" class="add btn btn-primary todo-list-add-btn m-4" id="add-task">Print PDF</a>
</div>
    <div class="card-body">
 <table id="Orders" class="display mt-4" style="width:100%">
        <thead>
            <tr>
                <th>id</th>
                <th>Firts Name</th>
                <th>Last Name</th>
                <th>Adress</th>
                <th>Phone</th>
                <th>order date</th>
                {# <th>User</th> #}
                <th>actions</th>
            </tr>
        </thead>
    </table>
                </div>
            </div>
    <script>
   $(document).ready(function() {
    $('#Orders').DataTable({
        "serverSide": true,
        "ajax": "{{ path('DataOrder') }}",
        "columns" : [
            { data: 'id' },
            { data: 'FirstName' },
            { data: 'LastName' },
            { data: 'Adresse' },
            { data: 'Phone' },
            
            {data: 'OrderDate'},
            
            { data: 'actions', orderable: false, searchable: false }
        ],
        "order": [[0, 'asc']],
    });
});


    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.7/js/dataTables.bootstrap5.js"></script>
