{% extends 'base.html.twig' %}
{% block body %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
   .order-form-container {
            background-color: #f8f9fa;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1)
        }
        .order-form-label {
            font-weight: bold;
            color: #495057;
        }
        .order-form-input {
            border: 1px solid #ced4da;
            border-radius: 4px;
            transition: border-color 0.3s ease-in-out;
            width: 100%;
        }
        .order-form-input:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        .btn-submit {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 50px;
            transition: background-color 0.3s ease-in-out;
            width: 100%;
        }
        .btn-submit:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

    <div class="container pt-4 ml-4">
        <div class="row justify-content-center">
            <div class="col-md-6 order-form-container">
                <h2 class="form-title">Place Your Order</h2>
                <p class="form-subtitle">Please fill out the form below to complete your order.</p>
                {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.FirstName, 'First Name', {'label_attr': {'class': 'order-form-label'}}) }}
                        {{ form_widget(form.FirstName, {'attr': {'class': 'form-control order-form-input'}}) }}
                    </div>
                    <div class="form-group mt-3">
                        {{ form_label(form.LastName, 'Last Name', {'label_attr': {'class': 'order-form-label'}}) }}
                        {{ form_widget(form.LastName, {'attr': {'class': 'form-control order-form-input'}}) }}
                    </div>
                    <div class="form-group mt-3">
                        {{ form_label(form.Adresse, 'Address', {'label_attr': {'class': 'order-form-label'}}) }}
                        {{ form_widget(form.Adresse, {'attr': {'class': 'form-control order-form-input'}}) }}
                    </div>
                    <div class="form-group mt-3">
                        {{ form_label(form.Phone, 'Phone', {'label_attr': {'class': 'order-form-label'}}) }}
                        {{ form_widget(form.Phone, {'attr': {'class': 'form-control order-form-input'}}) }}
                    </div>
                    <div class="form-group mt-3">
                        {{ form_label(form.OrderDate, 'Order Date', {'label_attr': {'class': 'order-form-label'}}) }}
                        {{ form_widget(form.OrderDate, {'attr': {'class': 'form-control order-form-input'}}) }}
                    </div>
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-submit">Place Order</button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

{% endblock %}
