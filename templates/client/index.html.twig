{% extends 'base.html.twig' %}
{% block body %}
<style>
        .card-img-top {
            width: 100%;
            height: 500px; /* Adjust this height as needed */
            object-fit: cover;
        }
        .wrapper {
            padding: 20px;
        }
        .product-card {
            margin-bottom: 20px;
        }
        .product-card img {
            max-height: 200px;
            object-fit: cover;
        }
        .product-card .card-body {
            padding: 15px;
        }
        .filter-section {
            margin-bottom: 20px;
        }
    </style>
<section class="bg-white py-5 m-5">
    <div class="container mt-5 mb-5">
        <div class="d-flex justify-content-center row">
        <!-- <div class="row g-4"> -->
            <div class="col-lg-7 d-flex flex-column justify-content-center">
                <h1 class="display-4 font-weight-bold mb-4">Storage Management Tool for Enterprises</h1>
                <p class="lead text-muted mb-5">From inventory tracking to automated stock management, companies around the world use StorEase to optimize their storage solutions.</p>
                <div class="d-flex">
                    <a href="#" class="btn btn-primary btn-lg mr-3">
                        Get started
                        <svg class="bi bi-arrow-right ml-2" width="1em" height="1em" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                        </svg>
                    </a>
                </div>
            </div>
            <div class="col-lg-5 d-none d-lg-block">
                <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png" class="d-block w-100" alt="mockup">
                        </div>
                        <div class="carousel-item">
                            <img src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png" class="d-block w-100" alt="mockup">
                        </div>
                        <div class="carousel-item">
                            <img src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/hero/phone-mockup.png" class="d-block w-100" alt="mockup">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
               <!-- FEATURED PRODUCTS -->
               <!-- FEATURED PRODUCTS -->
<section>
    <div class="d-flex justify-content-center">
        <h1 class="text-center m-2">FEATURED PRODUCTS</h1>
    </div>
    <div class="container py-5 m-4">
        <div class="row">
            {% for product in products %}
            <div class="col-md-4 col-lg-4 mb-4 mb-lg-0">
                <div class="card">
                    <div class="d-flex justify-content-between p-3">
                        <p class="lead mb-0">{{ product.name }}</p>
                        <div class="bg-info rounded-circle d-flex align-items-center justify-content-center shadow-1-strong" style="width: 35px; height: 35px;">
                            <p class="text-white mb-0 small">x4</p>
                        </div>
                    </div>
                    <img src="{{ asset('uploads/' ~ product.picture) }}" class="card-img-top " alt="{{ product.name }}" />

                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <p class="small"><a href="{{product.category.id}}" class="text-muted">{{product.category.name}}</a></p>
                            <!-- <p class="small text-danger"><s>{{product.price}}</s></p> -->
                        </div>

                        <div class="d-flex justify-content-between mb-3">
                            <h5 class="mb-0">{{product.name }}</h5>
                            <h5 class="text-dark mb-0">{{product.price}}</h5>
                        </div>

                        <div class="d-flex justify-content-between mb-2">
                            <p class="text-muted mb-0">Available: <span class="fw-bold">{{product.getStockQu()}}</span></p>
                            <div class="ms-auto text-warning">
                                <a type="button" class="btn btn-info" href="{{ path('app_cart', {id:product.id}) }}">
                                    <div class="pretext">
                                        <i class="fa-solid fa-cart-shopping"></i> ADD TO CART
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div> 
            </div>
            {% endfor %}
        </div>
    </div>
</section>
            <!-- Filtre  -->
            <!-- QueryBulider inner join and call and give the id for the category name -->
            <div class="wrapper">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="text-center m-2">AVAILABE PRODUCTS</h1>
                    <div class="d-flex align-items-center">
                        <button type="button" class="btn btn-success">
                            Product 4
                          </button>
                    </div>
                </div>
            
                <div class="filter-section d-flex justify-content-between align-items-center bg-white p-2">
                    <div>
                        <label class="mr-2">Most Popular <input type="radio" name="filter" checked></label>
                        <label>Cheapest <input type="radio" name="filter"></label>
                    </div>
                    <div>
                        <label class="m-2">Farm <input type="checkbox" checked></label>
                        <label class="m-2">Bio <input type="checkbox"></label>
                        <label class="m-2">Czech Republic <input type="checkbox"></label>
                    </div>
                </div>
            
                <div class="row">
                    <!-- Product Card -->
                    <div class="col-md-4 col-sm-6 product-card">
                        <div class="card">
                            <img src="https://www.freepnglogos.com/uploads/cucumber-png/cucumber-png-image-purepng-transparent-png-26.png" class="card-img-top" alt="Product Image">
                            <div class="card-body">
                                <h6 class="card-title">Product Title</h6>
                                <p class="card-text text-muted">Small product description.</p>
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="fas fa-star text-warning"></i>
                                    <i class="far fa-star text-warning"></i>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <div>
                                        <h6 class="mb-0 font-weight-bold">36.99 USD</h6>
                                        <small class="text-muted"><s>48.56</s></small>
                                    </div>
                                    <button class="btn btn-primary">Buy Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Repeat Product Card for more products -->
                </div>
            </div>
            
















            
</div>
</div>
</div>
</section>

<!-- Add Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.min.js"></script>

{% endblock %}
