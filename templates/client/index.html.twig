<body>
    <section class="hero d-flex justify-content-center align-items-center" style="background-image: url('../image/warehouse.jpg'); background-size: cover; background-position: center; height: 600px; border: 1px solid #ddd;
              box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);">
        <div class="container text-center text-white">
          <h1>Captivating Headline</h1>
          <p class="lead">A compelling description of your product or service.</p>
          <a href="#" class="btn btn-primary btn-lg">Learn More</a>
        </div>
      </section>
      
      <div class="seven">
        <h1>Featured Products</h1>
      </div>
<div class="container page-wrapper">
  <div class="page-inner">
    <div class="row row-cols-1 row-cols-md-3 g-4">
      {% for product in products %}
        <div class="col">
          <div class="el-wrapper">
            <div class="box-up">
              <img class="img" src="{{ asset('uploads/' ~ product.picture) }}" alt="">
              <div class="img-info">
                <div class="info-inner">
                  <span class="p-name">{{ product.name }}</span>
                  <span class="p-name"> Available quantity : {{ product.getStockQu()}}</span>
                </div>
                
                <div class="a-size"><span class="size">{{ product.description }}</span><br/>
                  <!-- Available quantity : <span class="size">{{ product.getStockQu()}}</span> -->
                </div>
              </div>
            </div>
            <div class="box-down">
              <div class="h-bg">
                <div class="h-bg-inner"></div>
              </div>
              {% if product.StockQu == 0 %}
              <a class="cart" href="#">
                <span class="price">${{product.price }}</span>
                <span class="add-to-cart">
                  <span class="txt">Out of Stock</span>
                </span>
              </a>
              {% else %}
              <a class="cart" href="{{path('cart_add',{id:product.id})}}">
                <span class="price">${{product.price }}</span>
                <span class="add-to-cart">
                  <span class="txt">Add in cart</span>
                </span>
              </a>
              {% endif %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
  <section class="container py-5 bg-light">
    <h2>Why Choose Us?</h2>
    <div class="row">
      <div class="col-md-6">
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Benefit 1: Increased Efficiency</li>
          <li class="list-group-item">Benefit 2: Cost-Effective Solutions</li>
          <li class="list-group-item">Benefit 3: User-Friendly Interface</li>
        </ul>
      </div>
      <div class="col-md-6">
        <img src="../image/warehouse.jpg" class="img-fluid" alt="Benefits Image">
      </div>
    </div>
  </section>

  <section class="container py-5 text-center">
    <h2>Ready to Get Started?</h2>
    <a href="#" class="btn btn-primary btn-lg">Sign Up Now</a>
  </section>

  <footer class="text-center py-3">
    <p>&copy; 2024 Stock Manage</p>
  </footer>






{% endblock %}
